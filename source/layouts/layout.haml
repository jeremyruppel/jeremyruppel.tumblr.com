!!!
%html{ html_attrs }
  %head
    / standard head stuff
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', :'http-equiv' => 'X-UA-Compatible' }
    %meta{ :content => 'width=device-width, initial-scale=1', :name => 'viewport' }
    %link{ :href => '{Favicon}', :rel => 'shortcut icon' }
    %link{ :href => '{RSS}', :rel => 'alternate', :type => 'application/rss+xml' }

    %title {Title}{block:PostTitle} | {PostTitle}{/block:PostTitle}
    = block :description do
      %meta{ :name => 'description', :content => '{MetaDescription}' }

    / tumblr settings
    %meta{ :name => 'text:Author', :content => 'Jeremy Ruppel' }
    %meta{ :name => 'text:Disclaimer', :content => 'The views here are solely my own and do not necessarily reflect the views of my employer.' }
    %meta{ :name => 'text:Github Username', :content => 'jeremyruppel' }
    %meta{ :name => 'text:Linkedin Username', :content => 'jeremyruppel' }
    %meta{ :name => 'text:Twitter Username', :content => 'jeremyruppel' }

    / assets
    = inline_stylesheet 'application'
    = inline_javascript 'application'
  %body
    #main{ :role => 'main' }
      = yield

      %footer
        :markdown
          &copy; {CopyrightYears} {text:Author}.
          Powered by [Tumblr](https://www.tumblr.com).

    %aside
      = link_to '/' do
        %img{ :src => '{PortraitURL-128}', :alt => '{text:Author}' }

      :markdown
        **I'm {text:Author}**. {Description}

        {text:Disclaimer}

      %nav
        = block :if_github_username do
          = link_to 'https://github.com/{text:Github Username}' do
            %i.icon-2x.icon-github
        = block :if_linkedin_username do
          = link_to 'http://www.linkedin.com/in/{text:Linkedin Username}' do
            %i.icon-2x.icon-linkedin-sign
        = block :if_twitter_username do
          = link_to 'https://twitter.com/{text:Twitter Username}' do
            %i.icon-2x.icon-twitter
        = link_to '{RSS}' do
          %i.icon-2x.icon-rss
        = link_to '/archive' do
          %i.icon-2x.icon-th-large
